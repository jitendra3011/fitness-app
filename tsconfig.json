{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "strict": true,
    "baseUrl": ".",
    "skipLibCheck": true,              // ✅ ignore type errors inside node_modules
    "noEmit": true, 
    "paths": {
      "@/*": [
        "./*"
      ],
      "@admin/*": [
        "components/admin/*"
      ],
      "@components/*": ["components/*"],
      "@lib/*": [
        "src/lib/*",
      ],
      "@ai/*": ["src/ai/*"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",                     // ✅ don’t check node_modules
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
